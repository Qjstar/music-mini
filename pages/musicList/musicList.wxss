/* pages/music/music.wxss */
.title{
    width: 100%;
    background: #222;
    color: #fff;
    text-align: center;
    padding: 10rpx;
    font-size: 35rpx;
    font-weight: bold;
}
.musicbox{

}
.musicbox .item{
    display: flex;
    /* background-color: pink; */
    padding: 10rpx 0 10rpx 32rpx;
    justify-content: space-between;
    border-bottom: 1px solid #d3d0d0;
}

.item .txtbox{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.item .txtbox text{
    margin: 5rpx;
}
.item .item-imgText{
    display: flex;
}
.item image{
    width: 100rpx;
    height: 100rpx;
    border: 1px solid #000;
    border-radius: 10rpx;
    margin-right: 20rpx;
}
.item .playing{
    width: 100rpx;
    height: 100rpx;
    font-size: 50rpx;
    line-height: 100rpx;
    color: #ff4f4f;
}
.item .txtbox .musicName{
    font-style: 35rpx;
}
.item .txtbox .name{
    font-size: 28rpx;
    color: #777;
}